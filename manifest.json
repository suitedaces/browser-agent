{
  "manifest_version": 3,
  "name": "taskhomie",
  "version": "1.0.0",
  "description": "AI browser automation with voice",

  "permissions": [
    "sidePanel",
    "activeTab",
    "tabs",
    "scripting",
    "debugger",
    "storage",
    "offscreen",
    "contextMenus"
  ],

  "host_permissions": [
    "<all_urls>",
    "https://api.anthropic.com/*"
  ],

  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },

  "side_panel": {
    "default_path": "sidepanel/index.html"
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content/index.js"],
    "run_at": "document_idle",
    "all_frames": false
  }],

  "action": {
    "default_title": "taskhomie",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "commands": {
    "_execute_action": {
      "suggested_key": { "default": "Ctrl+Shift+E", "mac": "Command+Shift+E" }
    },
    "push-to-talk": {
      "suggested_key": { "default": "Ctrl+Shift+Space", "mac": "Command+Shift+Space" },
      "description": "Hold to talk"
    },
    "stop-agent": {
      "suggested_key": { "default": "Ctrl+Shift+X", "mac": "Command+Shift+X" },
      "description": "Stop current task"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
