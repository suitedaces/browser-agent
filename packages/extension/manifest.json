{
  "manifest_version": 3,
  "name": "taskhomie",
  "version": "1.0.0",
  "description": "AI browser automation",
  "permissions": [
    "debugger",
    "tabs",
    "activeTab",
    "sidePanel",
    "storage"
  ],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "action": {
    "default_title": "taskhomie"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
